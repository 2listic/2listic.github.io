---
import ContactSection from "@components/contactSection.astro";
import Container from "@components/container.astro";
import Features from "@components/features.astro";
import Hero from "@components/hero.astro";
import SnappingElement from "@components/snappingElement.astro";
import Layout from "@layouts/Layout.astro";
import ExperienceSection from "@components/experienceSection.astro";
---

<Layout title="" enableScrollSnap={true}>
    <SnappingElement id="hero">
    <Container>
      <Hero />
    </Container>
    </SnappingElement>

  <SnappingElement id="features" class="bg-linear-to-br from-purple-100 to-purple-200">
    <Container>
      <Features />
      <!-- <Cta /> -->
    </Container>
  </SnappingElement>

  <!-- <SnappingElement id="coral">
    <CoralSection />
  </SnappingElement> -->

  <SnappingElement id="team" class="bg-linear-to-br from-white to-purple-100">
    <Container>
      <ExperienceSection />
    </Container>
  </SnappingElement>

  <SnappingElement id="contact" isLast={true}>
    <Container>
      <ContactSection />
    </Container>
  </SnappingElement>
</Layout>
