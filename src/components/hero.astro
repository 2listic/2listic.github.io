const cubes = [
  { src: '/cubeA.svg', alt: 'Cube 1', delay: 1 },
  { src: '/cubeB.svg', alt: 'Cube 2', delay: 2 },
  { src: '/cubeC.svg', alt: 'Cube 3', delay: 3 },
  { src: '/cubeD.svg', alt: 'Cube 4', delay: 4 },
];
---

<main class="pb-4 pt-4 md:pt-12 md:pb-12">
  <div class="flex flex-col gap-1 items-center justify-center">
    <a href="/#features" class="relative w-[250px] h-[250px]">
      {cubes.map(({ src, alt, delay }, index) => (
        <img
          class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"
          src={src}
          alt={alt}
          style={
            index === cubes.length - 1 
              // ? `opacity: 0; animation: fade-in 1s ${delay}s, pulse 5s ${delay}s infinite alternate;`
              ? `opacity: 0; animation: fade-in 1s ${delay}s forwards`
              : `opacity: 0; animation: fade-in 1s ${delay}s forwards, fade-out 1s ${delay+1}s forwards;`
          }
        />
      ))}
    </a>
    <div >
      <!-- <h1
        class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
        No more accrocchi!
      </h1> -->
      <h1 class="text-4xl lg:text-5xl font-bold tracking-tight text-center text-slate-600 max-w-4xl">
        Digital Twins,<br/> made simple 
      </h1>
      <p class="text-center md:text-lg mt-4 text-slate-700 max-w-4xl">
        Create and manage digital twins,<br/> using no-code interfaces and advanced visualization
      </p>
    </div>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <!-- <Link
        size="lg"
