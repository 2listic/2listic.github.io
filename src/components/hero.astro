---
import CubeAlpha from "/public/cubeAlpha3.svg";
import CubeBeta from "/public/cubeBeta3.svg";

// Parts of Dualistic logo to ease parameterization
const cubes = [
  { Component: CubeAlpha, delay: 0 },
  { Component: CubeBeta, delay: 0, direction: 'right'},
];
---

<main class="pb-8 pt-8 md:pt-12 md:pb-12">
  <div class="flex flex-col gap-1 items-center justify-center">
    <a href="/#features" class="relative w-[150px] h-[150px] md:w-[200px] md:h-[200px]">
      {cubes.map(({ Component, delay, direction }, index) => (
        <Component
          class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2" 
          width="100%"
          height="100%"
          style={
            index === cubes.length - 1
              ? `opacity: 0; animation: slide-from-${direction} 1.5s ${delay}s forwards`
              : `opacity: 0; animation: fade-in 1s ${delay}s forwards`
          }
        />
      ))}
    </a>
    <div class="pt-10">
      <!-- <h1
        class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
        No more accrocchi!
      </h1> -->
      <h1 class="text-4xl lg:text-5xl font-bold tracking-tight text-center text-slate-600 max-w-4xl">
        Digital Twins,<br/> made simple 
      </h1>
      <p class="text-center md:text-lg mt-4 text-slate-700 max-w-4xl">
        Create and manage digital twins,<br/> using no-code interfaces and advanced visualization
      </p>
    </div>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <!-- <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/surjithctly/astroship"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="uil:github" />
         GitHub Repo
      </Link> -->
    </div>
  </div>
</main>

<style>
  /* Different animation available below */
  @keyframes fade-in {
    to { opacity: 0.5; }
  }
  
  @keyframes fade-out {
    to { opacity: 0; }
  }
  
  @keyframes pulse {
    from { opacity: 0.5; }
    to { opacity: 0.3; }
  }

  @keyframes slide-from-left {
    from { 
      opacity: 0;
      transform: translate(-50%, 0%);
    }
    to { 
      opacity: 0.5;
      transform: translate(0%, 0%);
    }
  }

  @keyframes slide-from-top {
    from { 
      opacity: 0;
      transform: translate(0%, -50%);
    }
    to { 
      opacity: 0.5;
      transform: translate(0%, 0%);
    }
  }

  @keyframes slide-from-right {
    from { 
      opacity: 0;
      transform: translate(50%, 0%);
    }
    to { 
      opacity: 0.5;
      transform: translate(0%, 0%);
    }
  }

  @keyframes slide-from-bottom {
    from { 
      opacity: 0;
      transform: translate(0%, 50%);
    }
    to { 
      opacity: 0.5;
      transform: translate(0%, 0%);
    }
  }
</style>