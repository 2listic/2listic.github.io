---
import LogoPart1 from "/public/logo_part1.svg";
import LogoPart2 from "/public/logo_part2.svg";

const cubes = [
  { Component: LogoPart1, name: "fade-in", time: 1, delay: 0 },
  { Component: LogoPart2, name: "slide-from-right", time: 1.5, delay: 0},
];
---

<main class="pb-20 pt-20">
  <div class="flex flex-col gap-1 items-center justify-center">
    <a href="/#features" class="relative w-[150px] h-[150px] md:w-[200px] md:h-[200px]">
      {cubes.map(({ Component, name, time, delay }, index) => (
        <Component
          class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2" 
          width="100%"
          height="100%"
          style={`opacity: 0; animation: ${name} ${time}s ${delay}s forwards`}
        />
      ))}
    </a>
    <div class="pt-12">
      <h1 class="text-4xl lg:text-5xl font-bold tracking-tight text-center text-slate-600 max-w-4xl">
        Digital Twins,<br/> made simple 
      </h1>
      <p class="text-center md:text-lg mt-4 text-slate-700 max-w-4xl">
        Create and manage digital twins,<br/> using no-code interfaces and advanced visualization
      </p>
    </div>
    <!-- <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/2listic/"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="uil:github" />
         GitHub Repo
      </Link>
    </div> -->
  </div>
</main>

<style>
  @keyframes fade-in {
    to { opacity: 0.8; }
  }

  @keyframes slide-from-right {
    from { 
      opacity: 0;
      transform: translate(50%, 0%);
    }
    to { 
      opacity: 0.8;
      transform: translate(0%, 0%);
    }
  }
</style>