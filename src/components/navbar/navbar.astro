        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-white-400 hover:text-yellow-900">
                      <span> {item.title}</span>
                    </a>
                  </li>
                )}
              
