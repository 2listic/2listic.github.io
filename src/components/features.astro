---
// @ts-ignore
import { Icon } from "astro-icon/components";
import Sectionhead from "./sectionhead.astro";

const features = [
  {
    title: "Simplicity and Wellbeing-Centric Approach",
    description:
      "Coral aims to revolutionize Digital Twin creation and management, ensuring that users can use the platform effortlessly.",
    icon: "uil:smile", 
  },
  {
    title: "Next-Generation Platform",
    description:
      "Coral's design revolves around concepts such as ease-of-use and modularity to empower industrial organizations \
       to tackle future challenges effectively",
    icon: "uil:window",
  },
  {
    title: "Integration of Technologies",
    description:
      "Coral integrates IoT, simulations, AI, data management, HPC, and visualization to provide a digital replica \
      for effective decision-making and management. ",
    icon: "uil:database",
  },
  {
    title: "Orchestrated by CoralCore",
    description:
      "CoralCore orchestrator ensures to operate efficiently and deliver an user experience based on block-based and no-code principles",
    icon: "uil:robot",
  },
  {
    title: "Modularity and Extensibility",
    description:
      "Modularity allows flexibility in customization and adaptation to specific organizational needs",
    icon: "uil:search",
  },
  {
    title: "Widely Adopted Standards",
    description:
      "compatibility and interoperability facilitates smooth integration with existing software environments.",
    icon: "uil:check", 
  },
];
const coralComponents = [
  {
    type: "Design",
    title: "Coral Build",
    description: "No-code building and admin. GUI",
    icon: "uil:pen",
  },
  {
    type: "Ingest",
    title: "Coral IoT",
    description: "Sensor data gateway",
    icon: "uil:plane-arrival",
  },
  {
    type: "Simulate",
    title: "Coral Sim/AI",
    description: "Simulation and AI engine",
    icon: "uil:heartbeat",
  },
  {
    type: "Orchestrate",
    title: "Coral Core",
    description: "Orchestrator and data manager",
    icon: "uil:constructor"
  },
  {
    type: "Visualize",
    title: "Coral Visualizer",
    description: "3D visualization with XR/VR",
    icon: "uil:cube"
  }
]
---

<Sectionhead>
  <Fragment slot="title">Coral</Fragment>
  <Fragment slot="desc">The next-generation Digital Twin platform</Fragment>
</Sectionhead>

<!-- <div class="mt-8 md:mt-0">
  <h2 class="text-center text-3xl lg:text-4xl font-bold lg:tracking-tight">
    Coral Digital Twin platform
  </h2>
  <p class="text-justify text-lg mt-4 text-slate-600">
    Coral is our digital twin creation and management platform. 
    Its holistic design encompasses and connects all the enabling technologies, 
    from IoT, to simulations, from AI, to data management, from HPC, to visualization.  
  </p>
</div> -->

<div class="grid grid-cols-1 sm:grid-cols-3 mt-8 md:mt-12 gap-8 md:gap-12">
  {
    features.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-black rounded-full  p-2 w-8 h-8 shrink-0">
          <Icon class="text-white" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-600 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
<div class="grid grid-cols-1 sm:grid-cols-5 mt-8 md:mt-12 gap-8 md:gap-12">
  {
    coralComponents.map((component) => (
      <div class="flex flex-col gap-1 md:gap-2 justify-content-start justify-items-center items-center">
        <div class="flex items-center justify-center shrink-0 border rounded-md w-16 h-16 ">
          <Icon class="text-center text-black w-8 h-8" name={component.icon}/>
        </div>
        <div class="text-center mt-1">{component.title}</div>
        <div class="font-semibold text-lg">{component.type}</div>
        <div class="text-center text-slate-600 leading-relaxed max-w-[75%]">{component.description}</div>
      </div>
    ))
  }
</div>
